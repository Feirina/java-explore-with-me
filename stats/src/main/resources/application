spring:
  datasource:
    username: root
    url: jdbc:postgresql://localhost:5432/ewm_stats
    driverClassName: org.postgresql.Driver
    password: root
  sql:
    init:
      mode: always
  jpa:
    properties:
      hibernate:
        dialect: org.hibernate.dialect.PostgreSQLDialect
        format_sql: 'true'
    hibernate:
      ddl-auto: none
server:
  port: '9090'

---

